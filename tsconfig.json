{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2017",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowJs": true,
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*", "index.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}